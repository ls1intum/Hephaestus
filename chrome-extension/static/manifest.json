{
    "manifest_version": 3,
    "name": "Hephaestus",
    "description": "Forging Healthy Software Teams",
    "version": "0.3.1",
    "icons": {
        "32": "icon32.png"
    },
    "action": {
        "default_title": "Hephaestus",
        "default_popup": "index.html"
    },
    "permissions": [
        "identity",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "web_accessible_resources": [{
        "resources": ["silent-check-sso.html"],
        "matches": ["*://*/*"]
    }],
    "oauth2": {
        "client_id": "hephaestus",
        "scopes": ["openid", "email"]
    }
}