# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java - 4 spaces (matches Prettier config)
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# TypeScript/JavaScript - tabs (matches Biome config)
[*.{ts,tsx,js,jsx}]
indent_style = tab
indent_size = 2
tab_width = unset
max_line_length = 100

# JSON - tabs (matches Biome config)
[*.{json,jsonc}]
indent_style = tab
indent_size = 2
tab_width = unset

# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# XML/HTML
[*.{xml,html}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
