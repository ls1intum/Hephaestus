{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate config - trust CI, review what matters",
  "extends": [
    "config:best-practices",
    ":semanticCommitTypeAll(chore)"
  ],
  "labels": [
    "dependencies"
  ],
  "assigneesFromCodeOwners": true,
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 7am on monday"
  ],
  "minimumReleaseAge": "3 days",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 5,
  "branchConcurrentLimit": 10,
  "rebaseWhen": "conflicted",
  "platformAutomerge": true,
  "automergeStrategy": "squash",
  "semanticCommitScope": "deps",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardApproval": false,
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "packageRules": [
    {
      "description": "Auto-merge patches - trust your CI",
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Auto-merge minor updates for stable deps",
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr",
      "minimumReleaseAge": "5 days",
      "matchPackageNames": [
        "!typescript",
        "!react",
        "!react-dom",
        "!/^@tanstack/",
        "!/^org\\.springframework/"
      ]
    },
    {
      "description": "Group Java/Spring - review together",
      "matchManagers": [
        "maven"
      ],
      "groupName": "Java dependencies",
      "labels": [
        "dependencies",
        "java"
      ]
    },
    {
      "description": "Group webapp non-major updates",
      "matchFileNames": [
        "webapp/package.json"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Webapp dependencies",
      "labels": [
        "dependencies",
        "webapp"
      ]
    },
    {
      "description": "Group TypeScript services",
      "matchFileNames": [
        "server/intelligence-service/**",
        "server/webhook-ingest/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "TypeScript services",
      "labels": [
        "dependencies",
        "services"
      ]
    },
    {
      "description": "Docs site - low risk, auto-merge aggressively",
      "matchFileNames": [
        "docs/package.json"
      ],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "Documentation dependencies",
      "labels": [
        "dependencies",
        "docs"
      ]
    },
    {
      "description": "Major updates require dashboard approval",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "dependencyDashboardApproval": true,
      "minimumReleaseAge": "7 days",
      "labels": [
        "dependencies",
        "breaking"
      ],
      "prPriority": -1
    },
    {
      "description": "Core frameworks - always review minors too",
      "matchPackageNames": [
        "typescript",
        "react",
        "react-dom",
        "/^@tanstack/",
        "/^org\\.springframework/"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "groupName": "Core frameworks"
    },
    {
      "description": "GitHub Actions - auto-merge",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "GitHub Actions",
      "labels": [
        "dependencies",
        "ci"
      ]
    },
    {
      "description": "Docker images",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "groupName": "Docker images",
      "labels": [
        "dependencies",
        "infrastructure"
      ]
    },
    {
      "description": "Node.js runtime - manual review",
      "matchDepNames": [
        "node"
      ],
      "matchManagers": [
        "nodenv",
        "nvm"
      ],
      "automerge": false,
      "dependencyDashboardApproval": true
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ],
    "schedule": [
      "at any time"
    ],
    "minimumReleaseAge": null,
    "prPriority": 10,
    "automerge": true,
    "groupName": null
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 7am on monday"
    ],
    "automerge": true,
    "automergeType": "pr"
  },
  "ignorePaths": [
    "**/node_modules/**",
    "**/target/**",
    "**/dist/**",
    "**/build/**"
  ]
}
