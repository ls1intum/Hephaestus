NODE_ENV=development
PORT=8000
LOG_LEVEL=debug
DATABASE_URL=file:dev.db

# Verbose logging - logs full request/response bodies to file (for debugging)
# WARNING: This can log sensitive data. Use only for debugging.
VERBOSE_LOGGING=false
VERBOSE_LOG_FILE=logs/verbose.log

MODEL_NAME="openai:gpt-4o-mini"
DETECTION_MODEL_NAME="openai:gpt-4o-mini"

# For Non-Azure OpenAI
OPENAI_API_KEY=<openai-api-key>

# For Azure OpenAI
AZURE_RESOURCE_NAME=<resource-name>
AZURE_API_KEY=<azure-api-key>

# LangFuse observability and prompt management (optional)
LANGFUSE_SECRET_KEY="sk-lf-..."
LANGFUSE_PUBLIC_KEY="pk-lf-..."
LANGFUSE_BASE_URL=<langfuse-instance-url>

# Optional: Langfuse tracing environment and release tags
# These are automatically applied to all traces if set
# LANGFUSE_TRACING_ENVIRONMENT=production
# LANGFUSE_TRACING_RELEASE=1.0.0

# Optional: OpenTelemetry service metadata
# Used for filtering traces in Langfuse by service
OTEL_SERVICE_NAME=intelligence-service
# OTEL_SERVICE_VERSION=1.0.0
