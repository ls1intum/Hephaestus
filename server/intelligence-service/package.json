{
	"name": "intelligence-service",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc && tsc-alias",
		"start": "node dist/index.js",
		"db:setup": "tsx scripts/setup-db.ts",
		"test": "vitest run",
		"openapi:export": "tsx scripts/export-openapi.ts",
		"db:introspect": "drizzle-kit introspect --dialect=postgresql --url=postgresql://root:root@localhost:5432/hephaestus && tsx scripts/post-introspect.ts",
		"check": "biome check src scripts drizzle.config.ts",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@ai-sdk/azure": "3.0.0-beta.98",
		"@ai-sdk/openai": "3.0.0-beta.96",
		"@hono/node-server": "^1.18.1",
		"@hono/zod-openapi": "^1.0.2",
		"@langfuse/client": "^4.0.1",
		"@langfuse/otel": "^4.0.1",
		"@langfuse/tracing": "^4.0.1",
		"@opentelemetry/sdk-node": "^0.205.0",
		"@scalar/hono-api-reference": "^0.9.13",
		"ai": "6.0.0-beta.150",
		"dotenv": "^17.2.1",
		"dotenv-expand": "^12.0.2",
		"drizzle-orm": "^0.44.4",
		"drizzle-zod": "^0.8.2",
		"hono": "^4.8.12",
		"hono-pino": "^0.10.1",
		"pg": "^8.16.3",
		"pino": "^9.7.0",
		"pino-pretty": "^13.1.1",
		"stoker": "2.0.1",
		"tokenlens": "^1.3.1",
		"uuid": "^9.0.1",
		"yaml": "^2.8.1",
		"zod": "^4.0.14"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/node": "^24.2.0",
		"@types/pg": "^8.11.10",
		"cross-env": "^10.0.0",
		"drizzle-kit": "^0.31.4",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"vitest": "^2.1.4"
	},
	"engines": {
		"node": ">=22.10.0"
	}
}
