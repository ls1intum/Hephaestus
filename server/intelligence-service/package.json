{
	"name": "intelligence-service",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc && tsc-alias",
		"start": "node dist/index.js",
		"db:setup": "tsx scripts/setup-db.ts",
		"test": "vitest run",
		"openapi:export": "tsx scripts/export-openapi.ts",
		"db:introspect": "drizzle-kit introspect --dialect=postgresql --url=postgresql://root:root@localhost:5432/hephaestus && tsx scripts/post-introspect.ts",
		"check": "biome check src scripts drizzle.config.ts",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@ai-sdk/azure": "3.0.0-beta.98",
		"@ai-sdk/openai": "3.0.0-beta.96",
		"@hono/node-server": "1.19.7",
		"@hono/zod-openapi": "1.1.5",
		"@langfuse/client": "4.4.9",
		"@langfuse/otel": "4.4.9",
		"@langfuse/tracing": "4.4.9",
		"@opentelemetry/sdk-node": "0.208.0",
		"@scalar/hono-api-reference": "0.9.28",
		"ai": "6.0.0-beta.150",
		"dotenv": "17.2.3",
		"dotenv-expand": "12.0.3",
		"drizzle-orm": "0.45.1",
		"drizzle-zod": "0.8.3",
		"hono": "4.11.0",
		"hono-pino": "0.10.3",
		"pg": "8.16.3",
		"pino": "10.1.0",
		"stoker": "2.0.1",
		"uuid": "13.0.0",
		"yaml": "2.8.2",
		"zod": "4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/node": "25.0.2",
		"@types/pg": "8.16.0",
		"cross-env": "10.1.0",
		"drizzle-kit": "0.31.8",
		"tsc-alias": "1.8.16",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vitest": "4.0.15"
	},
	"engines": {
		"node": ">=22.10.0"
	}
}
