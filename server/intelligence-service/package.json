{
  "name": "intelligence-service",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "devtools": "npx @ai-sdk/devtools",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:introspect": "drizzle-kit introspect --dialect=postgresql --url=postgresql://root:root@localhost:5432/hephaestus && tsx scripts/post-introspect.ts",
    "openapi:export": "tsx scripts/export-openapi.ts",
    "prompts": "tsx scripts/prompts.ts",
    "prompts:status": "tsx scripts/prompts.ts status",
    "prompts:diff": "tsx scripts/prompts.ts diff",
    "prompts:list": "tsx scripts/prompts.ts list",
    "prompts:push": "tsx scripts/prompts.ts push",
    "prompts:push:dry-run": "tsx scripts/prompts.ts push --dry-run",
    "prompts:pull": "tsx scripts/prompts.ts pull",
    "prompts:pull:dry-run": "tsx scripts/prompts.ts pull --dry-run",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:arch": "vitest run --config vitest.config.arch.ts",
    "check": "biome check src scripts test drizzle.config.ts",
    "check:fix": "biome check --write --unsafe src scripts test drizzle.config.ts",
    "format": "biome format --write .",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false src scripts test",
    "lint": "biome lint src scripts test",
    "lint:fix": "biome lint --write src scripts test",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test"
  },
  "dependencies": {
    "@ai-sdk/azure": "3.0.1",
    "@ai-sdk/devtools": "0.0.2",
    "@ai-sdk/openai": "3.0.1",
    "@ai-sdk/provider": "3.0.0",
    "@hono/node-server": "1.19.7",
    "@hono/zod-openapi": "1.2.0",
    "@hono/zod-validator": "0.7.6",
    "@langfuse/client": "4.5.1",
    "@langfuse/otel": "4.5.1",
    "@opentelemetry/sdk-node": "0.210.0",
    "@scalar/hono-api-reference": "0.9.37",
    "ai": "6.0.3",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "hono": "4.11.10",
    "hono-pino": "0.10.3",
    "lru-cache": "11.2.4",
    "pg": "8.17.2",
    "pino": "10.1.0",
    "stoker": "2.0.1",
    "uuid": "13.0.0",
    "yaml": "2.8.2",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "11.11.0",
    "@types/node": "22.19.11",
    "@types/pg": "8.16.0",
    "@vitest/coverage-v8": "4.0.16",
    "commander": "14.0.2",
    "cross-env": "10.1.0",
    "drizzle-kit": "0.31.8",
    "glob": "13.0.0",
    "ora": "9.1.0",
    "picocolors": "1.1.1",
    "testcontainers": "11.11.0",
    "ts-morph": "27.0.2",
    "tsc-alias": "1.8.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=22.10.0"
  }
}
