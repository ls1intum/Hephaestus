<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- ========================================================================
         Drop unused patch column from commit_file_change
         ========================================================================

         The patch column (TEXT) stored full diff text per file but was never
         read by any API, DTO, or downstream service. Removing it eliminates
         significant storage overhead and simplifies the commit sync pipeline.
    -->
    <changeSet id="1772500000000-1" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="commit_file_change" columnName="patch"/>
        </preConditions>
        <dropColumn tableName="commit_file_change" columnName="patch"/>
    </changeSet>

</databaseChangeLog>
