        <sql>
            UPDATE workspace SET slug = LOWER(REGEXP_REPLACE(account_login, '[^a-zA-Z0-9-]', '-', 'g')) WHERE slug IS NULL
        </sql>
    </changeSet>
    <changeSet author="ddmukh" id="1762784082609-14-constraint">
        <addNotNullConstraint tableName="workspace" columnName="slug" columnDataType="VARCHAR(64)"/>
