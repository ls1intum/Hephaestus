<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="FelixTJDietrich" id="workspace-slug-rename-1">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <tableExists tableName="workspace_slug_history"/>
            </not>
        </preConditions>
        <createTable tableName="workspace_slug_history">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="workspace_slug_historyPK"/>
            </column>
            <column name="changed_at" type="TIMESTAMP(6) WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="new_slug" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="old_slug" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="redirect_expires_at" type="TIMESTAMP(6) WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="workspace_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="FelixTJDietrich" id="workspace-slug-rename-2">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_workspace_slug_history_workspace"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="workspace_id" baseTableName="workspace_slug_history" constraintName="fk_workspace_slug_history_workspace" deferrable="false" initiallyDeferred="false" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace" validate="true"/>
    </changeSet>
    <changeSet author="FelixTJDietrich" id="workspace-slug-rename-3">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <indexExists indexName="idx_workspace_slug_history_old_slug" tableName="workspace_slug_history"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_workspace_slug_history_old_slug" tableName="workspace_slug_history">
            <column name="old_slug"/>
        </createIndex>
    </changeSet>
    <changeSet author="FelixTJDietrich" id="workspace-slug-rename-4">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <indexExists indexName="idx_workspace_slug_history_workspace_id" tableName="workspace_slug_history"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_workspace_slug_history_workspace_id" tableName="workspace_slug_history">
            <column name="workspace_id"/>
        </createIndex>
    </changeSet>
    <changeSet author="FelixTJDietrich" id="workspace-slug-rename-5">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <indexExists indexName="idx_workspace_slug_history_redirect_expires_at" tableName="workspace_slug_history"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_workspace_slug_history_redirect_expires_at" tableName="workspace_slug_history">
            <column name="redirect_expires_at"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
