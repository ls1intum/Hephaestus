        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- 
    Remove unused columns from repository table.
    These fields were never synced and have no feature use.
    -->

    <changeSet id="1735570001000-drop-repository-has-issues" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="repository" columnName="has_issues"/>
        </preConditions>
        <dropColumn tableName="repository" columnName="has_issues"/>
    </changeSet>

