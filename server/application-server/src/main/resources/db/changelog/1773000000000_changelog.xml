<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- ========================================================================
         Create commit_contributor table for multi-author tracking (R1)
         and commit_pull_request join table for commitâ†”PR linkage (R2).

         commit_contributor: Captures all authors (primary + co-authors from
         Co-authored-by trailers in squash merges) and committer for each commit.
         GitHub's GraphQL Commit.authors field automatically parses these trailers.

         commit_pull_request: Links commits to their associated pull requests,
         populated from GitHub's Commit.associatedPullRequests GraphQL field.
         ======================================================================== -->

    <!-- Changeset 1: Create commit_contributor table -->
    <changeSet id="1773000000000-1" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="commit_contributor"/>
            </not>
        </preConditions>
        <createTable tableName="commit_contributor">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_commit_contributor"/>
            </column>
            <column name="commit_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="role" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ordinal" type="int" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Changeset 2: Add foreign keys for commit_contributor -->
    <changeSet id="1773000000000-2" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="commit_contributor"/>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_commit_contributor_commit"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
            baseTableName="commit_contributor" baseColumnNames="commit_id"
            referencedTableName="git_commit" referencedColumnNames="id"
            constraintName="fk_commit_contributor_commit"
            onDelete="CASCADE"/>
        <addForeignKeyConstraint
            baseTableName="commit_contributor" baseColumnNames="user_id"
            referencedTableName="user" referencedColumnNames="id"
            constraintName="fk_commit_contributor_user"
            onDelete="SET NULL"/>
    </changeSet>

    <!-- Changeset 3: Add unique constraint and indexes for commit_contributor -->
    <changeSet id="1773000000000-3" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="commit_contributor"/>
            <not>
                <indexExists indexName="uq_commit_contributor_commit_email_role"/>
            </not>
        </preConditions>
        <addUniqueConstraint
            tableName="commit_contributor"
            columnNames="commit_id, email, role"
            constraintName="uq_commit_contributor_commit_email_role"/>
        <createIndex tableName="commit_contributor" indexName="idx_commit_contributor_commit_id">
            <column name="commit_id"/>
        </createIndex>
        <createIndex tableName="commit_contributor" indexName="idx_commit_contributor_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <!-- Changeset 4: Create commit_pull_request join table -->
    <changeSet id="1773000000000-4" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="commit_pull_request"/>
            </not>
        </preConditions>
        <createTable tableName="commit_pull_request">
            <column name="commit_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="pull_request_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Changeset 5: Add primary key and foreign keys for commit_pull_request -->
    <changeSet id="1773000000000-5" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="commit_pull_request"/>
            <not>
                <primaryKeyExists tableName="commit_pull_request"/>
            </not>
        </preConditions>
        <addPrimaryKey
            tableName="commit_pull_request"
            columnNames="commit_id, pull_request_id"
            constraintName="pk_commit_pull_request"/>
        <addForeignKeyConstraint
            baseTableName="commit_pull_request" baseColumnNames="commit_id"
            referencedTableName="git_commit" referencedColumnNames="id"
            constraintName="fk_commit_pr_commit"
            onDelete="CASCADE"/>
        <addForeignKeyConstraint
            baseTableName="commit_pull_request" baseColumnNames="pull_request_id"
            referencedTableName="issue" referencedColumnNames="id"
            constraintName="fk_commit_pr_pull_request"
            onDelete="CASCADE"/>
    </changeSet>

    <!-- Changeset 6: Add indexes for commit_pull_request -->
    <changeSet id="1773000000000-6" author="hephaestus">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="commit_pull_request"/>
            <not>
                <indexExists indexName="idx_commit_pull_request_pr_id"/>
            </not>
        </preConditions>
        <createIndex tableName="commit_pull_request" indexName="idx_commit_pull_request_pr_id">
            <column name="pull_request_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
