<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1762086458000-1" author="FelixTJDietrich">
        <comment>Add GitHub metadata fields to Issue table: author_association, state_reason, active_lock_reason, type, reactions, sub-issues summary, and dependencies</comment>
        
        <!-- Add author association enum field -->
        <addColumn tableName="issue">
            <column name="author_association" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add state reason enum field -->
        <addColumn tableName="issue">
            <column name="state_reason" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add active lock reason enum field -->
        <addColumn tableName="issue">
            <column name="active_lock_reason" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add issue type field (customizable per organization, max 64 chars) -->
        <addColumn tableName="issue">
            <column name="type" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add reaction counts (9 fields) -->
        <addColumn tableName="issue">
            <column name="reactions_total" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_plus_one" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_minus_one" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_laugh" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_hooray" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_confused" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_heart" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_rocket" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="reactions_eyes" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add sub-issues summary (2 fields) -->
        <addColumn tableName="issue">
            <column name="sub_issues_total" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="sub_issues_completed" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add issue dependencies summary (2 fields) -->
        <addColumn tableName="issue">
            <column name="blocked_by_count" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="issue">
            <column name="blocking_count" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="1762086458000-2" author="FelixTJDietrich">
        <comment>Add pull_request_requested_teams many-to-many join table for team review requests</comment>
        
        <createTable tableName="pull_request_requested_teams">
            <column name="pull_request_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="team_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="pull_request_requested_teams" 
                       columnNames="pull_request_id,team_id"
                       constraintName="pk_pull_request_requested_teams"/>

        <addForeignKeyConstraint baseTableName="pull_request_requested_teams"
                                 baseColumnNames="pull_request_id"
                                 referencedTableName="issue"
                                 referencedColumnNames="id"
                                 constraintName="fk_pr_requested_teams_pull_request"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="pull_request_requested_teams"
                                 baseColumnNames="team_id"
                                 referencedTableName="team"
                                 referencedColumnNames="id"
                                 constraintName="fk_pr_requested_teams_team"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
