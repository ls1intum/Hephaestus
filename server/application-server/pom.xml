		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>
		<!-- Override plexus-utils to fix CVE-2017-1000487 and CVE-2022-4244 -->
