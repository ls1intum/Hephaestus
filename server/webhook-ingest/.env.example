# NATS connection (supports nats:// or tls://, comma-separated for multiple servers)
# Examples: nats://localhost:4222, tls://secure.nats.io:4222, nats://a:4222,nats://b:4222
NATS_URL=nats://nats-server:4222

# Optional: Auth token for NATS
# NATS_AUTH_TOKEN=

# Shared webhook secret for GitHub (min 32 chars; generate with: `openssl rand -hex 32`)
WEBHOOK_SECRET=

# Server configuration
PORT=4200
LOG_LEVEL=info
NODE_ENV=development

# Stream configuration
STREAM_MAX_AGE_DAYS=180
STREAM_MAX_MSGS=2000000

# Request limits
MAX_PAYLOAD_SIZE_MB=25

# Publish behavior (keep <= 10s for GitHub/GitLab timeouts)
NATS_PUBLISH_TIMEOUT_MS=9000
NATS_PUBLISH_MAX_RETRIES=5
NATS_PUBLISH_RETRY_BASE_DELAY_MS=200
